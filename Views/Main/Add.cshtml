@model TaskPr.Models.UrlModel
@{
    ViewData["Title"] = "Add";
}
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Add Url</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
	    @Html.ValidationMessage("ExistUrlError", new { @class = "text-danger" })
		<div class="mb-3">
			<label asp-for="Url"></label>
			<input asp-for="Url" class="form-control" />
			<span asp-validation-for="Url" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Add</button>
		<a asp-controller="Main" asp-action="ShortUrlsTable" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

